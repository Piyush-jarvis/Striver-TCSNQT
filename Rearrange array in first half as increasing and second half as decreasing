#include <bits/stdc++.h>
using namespace std;

int main()
{   
    vector<int> arr = {8, 7, 1, 6, 5};
    int n = arr.size();
    sort(arr.begin(),arr.end());
    for(int i = 0; i < n; i++)
    {
        cout <<arr[i] <<" ";
    }
    
    if(n % 2 == 0)
    {
        cout <<"\nIncreasing Order: ";
        for(int i = 0; i < n/2; i++)
        {
            cout << arr[i] << "->";
        }
        cout <<"\nDecreasing Order: ";
        for(int i = n-1; i >= n/2; i--)
        {
            cout << arr[i] << "->";
        }
    }
    else
    {
        return 0;
    }
    return 0;
}
