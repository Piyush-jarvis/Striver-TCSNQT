///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
                                                                      MAIN APPROACH IS THIS
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
class Solution {
private:
void reverse(vector<int>&nums, int low, int high)
    {
        while(low < high)
        {
            swap(nums[low++],nums[high--]);
        }
    }

 
public:
       void rotate(vector<int>& nums, int k) {
        int n= nums.size();
        reverse(nums,0,n-k-1);
        reverse(nums,n-k,n-1);
        reverse(nums,0,n-1);
    }
};

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
                                                                      MAIN APPROACH IS THIS
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
class Solution {
#include <bits/stdc++.h> 
#include <iostream>
using namespace std;

void rotate(int *arr, int n){
    int a = arr[0];
        for(int i=1; i<n; i++){
            arr[i-1] = arr[i];
        }

    arr[n-1] = a;
}

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
                                                                LEETCODE SOLUTION 
///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

class Solution {
private:
void reverse(vector<int>&nums, int low, int high)
    {
        while(low < high)
        {
            swap(nums[low++],nums[high--]);
        }
    }

 
public:
       void rotate(vector<int>& nums, int k) {
        k %= nums.size();
        reverse(nums,0,nums.size()-1);
        reverse(nums,0,k-1);
        reverse(nums,k,nums.size()-1);
    }
};
