//{ Driver Code Starts
//Initial template for C++

#include <bits/stdc++.h>
using namespace std;

// } Driver Code Ends
//User function template for C++

class Solution{   
public:
    void segregate0and1(int arr[], int n) {
        // code here
        int count = 0;
        for(int i = 0; i < n; i++)
        {
            if(arr[i] == 0)
            {
                swap(arr[i],arr[count]);
                count++;
            }
        }
    }
};

